{
  "name": "e2e-tests",
  "private": true,
  "devDependencies": {
    "cypress": "^13.0.0",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.3.0",
    "mochawesome-report-generator": "^6.2.0"
  },
  "scripts": {
    "e2e": "cypress run",
    "e2e:open": "cypress open",
    "report:merge": "mkdir -p reports && mochawesome-merge reports/mochawesome*.json > reports/merged.json",
    "report:html": "marge reports/merged.json -f index -o reports/html",
    "test": "npm run e2e || true && npm run report:merge && npm run report:html"
  }
}